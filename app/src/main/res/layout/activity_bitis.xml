<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".bitis">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@+id/detay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/loogo" />

    <TextView
        android:id="@+id/detay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="16dp"
        android:text=""
        android:textColor="#E10D0D"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/icinde"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/icinde"
        android:layout_width="137dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:text="İçinde"
        android:textColor="#EA0909"
        android:textSize="23dp"
        app:layout_constraintBottom_toTopOf="@+id/ozellikler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detay" />

    <TextView
        android:id="@+id/ozellikler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="15dp"
        android:text=""
        android:textColor="#E10000"
        android:textSize="23dp"
        app:layout_constraintBottom_toTopOf="@+id/olsun"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icinde" />

    <TextView
        android:id="@+id/olsun"
        android:layout_width="143dp"
        android:layout_height="0dp"
        android:layout_marginBottom="18dp"
        android:text="Olsun"
        android:textColor="#EA0909"
        android:textSize="23dp"
        app:layout_constraintBottom_toTopOf="@+id/extraIstek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ozellikler" />

    <TextView
        android:id="@+id/extraIstek"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="31dp"
        android:text=""
        android:textColor="#D30000"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/yeniSiparis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/olsun" />

    <Button
        android:id="@+id/yeniSiparis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:backgroundTint="@color/black"
        android:text="Yeni Sipariş"
        app:layout_constraintBottom_toTopOf="@+id/resim"
        app:layout_constraintStart_toStartOf="@+id/resim"
        app:layout_constraintTop_toBottomOf="@+id/extraIstek" />

    <ImageView
        android:id="@+id/resim"
        android:layout_width="121dp"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yeniSiparis"
        app:srcCompat="@drawable/carpi" />

</androidx.constraintlayout.widget.ConstraintLayout>
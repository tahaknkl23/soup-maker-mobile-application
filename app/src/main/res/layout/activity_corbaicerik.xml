<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".corbaicerik">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="124dp"
        android:layout_height="28dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="74dp"
        android:text="Tuz Oranı"
        android:textColor="@color/white"
        android:textSize="23dp"
        app:layout_constraintStart_toStartOf="@+id/corbaAdi"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="134dp"
        android:layout_height="28dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="114dp"
        android:layout_marginBottom="112dp"
        android:text="Acı Oranı"
        android:textColor="@color/white"
        android:textSize="23dp"
        app:layout_constraintBottom_toTopOf="@+id/nane"
        app:layout_constraintStart_toStartOf="@+id/TuzOrani"
        app:layout_constraintTop_toTopOf="@+id/corbaAdi" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="70dp"
        android:text="Lütfen İsteklerinizi İşaretleyiniz"
        android:textColor="#CA1A1A"
        android:textSize="23dp"
        app:layout_constraintBottom_toTopOf="@+id/beyin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <Switch
        android:id="@+id/sarimsak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="284dp"
        android:text="Sarımsak"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/nane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:text="Nane"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/beyin"
        app:layout_constraintStart_toStartOf="@+id/beyin" />

    <Switch
        android:id="@+id/dil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:text="Dil"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/sirke"
        app:layout_constraintStart_toStartOf="@+id/sirke" />

    <Switch
        android:id="@+id/terbiye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Terbiye"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/sarimsak"
        app:layout_constraintTop_toBottomOf="@+id/sarimsak" />

    <Switch
        android:id="@+id/beyin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:text="Sirke"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/yag"
        app:layout_constraintStart_toStartOf="@+id/yag" />

    <Switch
        android:id="@+id/sirke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:text="Beyin"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/kasar"
        app:layout_constraintStart_toStartOf="@+id/kasar" />

    <Switch
        android:id="@+id/krema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Krema"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/kitir"
        app:layout_constraintTop_toBottomOf="@+id/terbiye" />

    <Switch
        android:id="@+id/yag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="10dp"
        android:text="Yağ"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/limon"
        app:layout_constraintEnd_toEndOf="@+id/limon" />

    <Switch
        android:id="@+id/kasar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="10dp"
        android:text="Kaşar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tozBiber"
        app:layout_constraintEnd_toEndOf="@+id/tozBiber" />

    <Switch
        android:id="@+id/kitir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="56dp"
        android:text="Kıtır"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/limon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/krema" />

    <Switch
        android:id="@+id/limon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="31dp"
        android:text="Limon"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/tozBiber"
        app:layout_constraintStart_toEndOf="@+id/kitir"
        app:layout_constraintTop_toBottomOf="@+id/krema" />

    <Switch
        android:id="@+id/tozBiber"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="25dp"
        android:text="Toz Biber"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/limon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/limon"
        app:layout_constraintTop_toTopOf="@+id/limon" />

    <Button
        android:id="@+id/SiparisButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FF5722"
        android:text="Sipariş Ver"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/baskabiristek" />

    <TextView
        android:id="@+id/corbaAdi"
        android:layout_width="306dp"
        android:layout_height="34dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="37dp"
        android:text=""
        android:textColor="#DD1010"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/TuzOrani"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="36dp"
        android:max="2"
        android:progress="0"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <SeekBar
        android:id="@+id/AciOrani"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="13dp"
        android:max="2"
        android:progress="0"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="18dp"
        android:text="Ekstra İsteklerinizi Yazabilirsiniz"
        android:textColor="#EC1D1D"
        android:textSize="23dp"
        app:layout_constraintBottom_toTopOf="@+id/baskabiristek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/baskabiristek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:hint="Başka Bir Arzunuz?"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#615E5E"
        android:textColorHint="#736868"
        app:layout_constraintBottom_toTopOf="@+id/SiparisButton"
        app:layout_constraintEnd_toEndOf="@+id/corbaAdi"
        app:layout_constraintStart_toStartOf="@+id/kitir" />
</androidx.constraintlayout.widget.ConstraintLayout>